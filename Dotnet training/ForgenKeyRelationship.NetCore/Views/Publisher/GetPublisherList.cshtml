@model IEnumerable<ForgenKeyRelationship.NetCore.Models.Publisher>

@{
    ViewData["Title"] = "GetPublisherList";
}

<h1>GetPublisherList</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>
                        Publisher Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th class="text-center">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublisherId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.PublisherId" class="btn btn-primary">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.PublisherId" class="btn btn-info">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.PublisherId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No publishers found.</p>
}
