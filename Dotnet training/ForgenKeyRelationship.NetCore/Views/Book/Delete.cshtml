@model ForgenKeyRelationship.NetCore.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="display-4">Delete Book</h1>
    <h3 class="text-center">Are you sure you want to delete this?</h3>
    <hr />

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-center text-color-primary">Book Information</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Title)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ISBN)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.ISBN)</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PublicationDate)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.PublicationDate)</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Genre)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Genre)</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Author)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Author.Name)</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Publisher)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Publisher.Name)</dd>
                        </dl>

                        <div class="text-center">
                            <form asp-action="Delete" class="d-inline">
                                <input type="hidden" asp-for="BookId" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                            <a asp-action="GetAllBooks" class="btn btn-secondary ml-2">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
